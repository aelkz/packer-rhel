{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "rhel-server-7.5-x86_64-dvd.iso",
      "iso_checksum": "fdc2f2faa2e31f0ba77d49eab14651cf",
      "iso_checksum_type": "md5",
      "output_directory": "output_rhel_ocp_vagrant",
      "shutdown_command": "shutdown -P now",
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "http_directory": "httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "changeme",
      "ssh_port": 22,
      "ssh_timeout": "10m",
      "vm_name": "rhel-7.5-ocp.qcow2",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/x86_64-generic.ks<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "scripts": ["scripts/vagrant.sh", "scripts/ocp.sh", "scripts/cleanup.sh"],
      "type": "shell",
      "expect_disconnect": true,
      "start_retry_timeout": "10m",
      "environment_vars": ["RHN_USERNAME={{user `rhn_username`}}",
                           "RHN_PASSWORD={{user `rhn_password`}}",
                           "POOL_ID={{user `pool_id`}}"]
    }

  ],
  "post-processors": [
    {
      "type" : "vagrant",
      "output": "rhel-7.5-ocp.box",
      "keep_input_artifact": false
    }
  ]
}
